{
	"name": "GuideEditor",
	"manifest_version": 2,
	"description": "Edit your own guide book",
	"version": "0.3",
	"background": {
	  "scripts": ["background.js"]
    },
	"page_action": {
		"default_icon": "acme.png",
		"__default_popup": "js/capture-plugin/view/popup.html",
		"__default_title": "Clicked Me"
	},
    "__content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["js/jquery/jquery.min.js",
				"js/quill/quill.js",
				"script.js",
				"js/capture-plugin/js/contentscript.js"
			],
			"css": ["js/quill/quill-snow.css"]
		}
	],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["js/jquery/jquery.min.js",
				"js/Trumbowyg-master/dist/trumbowyg.min.js",
				"js/Trumbowyg-master/dist/plugins/upload/trumbowyg.upload.js",
				"js/Trumbowyg-master/dist/plugins/lineheight/trumbowyg.lineheight.min.js",
				"js/Trumbowyg-master/dist/langs/ko.js",
				"js/capture-plugin/js/contentscript.js",
				"js/html2pdf.js",
				"editorHTML.js"
			],
			"css": ["js/Trumbowyg-master/dist/ui/trumbowyg.min.css"]
		}
	],
    "web_accessible_resources": [
        "*"
    ],
    "content_security_policy": "script-src 'self' 'sha256-IThiKMnsg0UHaLmP7sJxZpd/ohvINImwjxFJyxGFSlk='; object-src 'self'",
	"permissions": [
		"tabs",
		"storage", 
		"http://*/*", "https://*/*"
		,
		"downloads", 
		"unlimitedStorage", "<all_urls>"
	]
}